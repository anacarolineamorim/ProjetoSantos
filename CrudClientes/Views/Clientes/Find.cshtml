@model CrudClientes.Models.Cliente
@{
    ViewBag.Title = "Find";
}

<h2>Find</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-row">
        <h4>Busca</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CpfCnpj, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.CpfCnpj, new { htmlAttributes = new { @class = "form-control", @id = "documento" } })
                @Html.ValidationMessageFor(model => model.CpfCnpj, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Buscar" class="btn btn-default" id="btnBuscar" />
            </div>
        </div>
    </div>
}
